@{
    ViewData["Title"] = "Testimonials Page";
}
@Html.Partial("~/Areas/AdminPanel/Views/Shared/_admin_header.cshtml")

<div class="text-center">
    <h3>Customer Testimonials</h3>
</div>

<section class="animated-section">
    <div class="container">
        <!-- Section Header -->
        <div class="section-header">
            <h3 class="section-title">
                <i class="fas fa-comment-alt me-2"></i>Manage Testimonials
            </h3>
            <button class="btn btn-primary" onclick="window.location.href='@Url.Action("AddTestimonial","Home")'">
                <i class="fas fa-plus me-2"></i>ADD TESTIMONIAL
            </button>
        </div>

        <!-- Alert for notifications -->
        <div class="alert alert-success alert-dismissible fade show d-none" role="alert" id="testimonialAlert">
            <span id="testimonialAlertMessage"></span>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        <div class="table-container">
            <table class="table-design" id="testimonialTable">
                <thead>
                <tr>
                    <th><i class="fas fa-hashtag me-1"></i>ID</th>
                    <th><i class="fas fa-user me-1"></i>Name</th>
                    <th><i class="fas fa-star me-1"></i>Rating</th>
                    <th><i class="fas fa-comment me-1"></i>Comment</th>
                    <th><i class="fas fa-calendar me-1"></i>Date</th>
                    <th><i class="fas fa-cogs me-1"></i>Operations</th>
                </tr>
                </thead>
                <tbody id="testimonialTableBody">
                <!-- Dynamic content for testimonials will go here -->
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="pagination-container mt-4">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center" id="pagination">
                    <!-- Pagination will be dynamically added here -->
                </ul>
            </nav>
        </div>
    </div>
</section>

<style>
    .pagination-container {
        margin-top: 30px;
    }

    .page-item.active .page-link {
        background-color: #007bff;
        border-color: #007bff;
    }

    .page-link {
        color: #007bff;
    }

    .page-link:hover {
        color: #0056b3;
    }

    .table-container {
        margin-top: 20px;
    }

    .table-design {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    .table-design th,
    .table-design td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #dee2e6;
    }

    .table-design th {
        background-color: #f8f9fa;
        font-weight: 600;
    }

    .buttondanger {
        background-color: #dc3545;
        color: white;
        border: none;
        padding: 5px 10px;
        border-radius: 4px;
        cursor: pointer;
    }

    .buttonupdate {
        background-color: #28a745;
        color: white;
        border: none;
        padding: 5px 10px;
        border-radius: 4px;
        cursor: pointer;
        margin-right: 5px;
    }

    .text-warning {
        color: #ffc107;
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .section-title {
        margin: 0;
    }
</style>

<script src="~/js/testimonial.js"></script>

@Html.Partial("~/Areas/AdminPanel/Views/Shared/_admin_footer.cshtml") 