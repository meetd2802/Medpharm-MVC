                        <th><i class="fas fa-phone me-1"></i>Phone</th>
                        <th><i class="fas fa-cogs me-1"></i>Operations</th>
                    </tr>
                    </thead>
                    <tbody id="adminTableBody">
                    <!-- Dynamic content will be loaded here -->
