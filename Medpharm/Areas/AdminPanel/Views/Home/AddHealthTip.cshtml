@{
    ViewData["Title"] = "Health Tip Page";
}

@Html.Partial("~/Areas/AdminPanel/Views/Shared/_admin_header.cshtml")

<section class="animated-section">
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title text-center mb-0">
                    <i class="fas fa-heartbeat me-2"></i>Add New Health Tip
                </h3>
            </div>
            <div class="card-body">
                <form id="healthTipForm" enctype="multipart/form-data" method="post" class="needs-validation" novalidate>
                    <div class="row">
                        <div class="col-md-6">
                            <!-- Image Preview -->
                            <div class="mb-4 text-center">
                                <div class="image-preview-container" style="margin-bottom: 1rem;">
                                    <img id="imagePreview" class="img-fluid rounded" style="max-height: 200px; display: none;" alt="Health Tip Preview">
                                </div>
                                <div class="mb-3">
                                    <label for="HealthTipImage" class="form-label">
                                        <i class="fas fa-image me-2"></i>Upload Image
                                    </label>
                                    <input type="file" class="form-control" id="HealthTipImage" name="HealthTipImage"
                                           accept=".jpg,.png,.jpeg" required>
                                    <div class="invalid-feedback">Please select an image.</div>
                                    <small class="form-text text-muted">Select a high-quality image that represents the health tip.</small>
                                </div>
                            </div>

                            <!-- Category and Author -->
                            <div class="mb-3">
                                <label for="Category" class="form-label">
                                    <i class="fas fa-tag me-2"></i>Category
                                </label>
                                <select id="Category" name="Category" class="form-select" required>
                                    <option value="" disabled selected>Select a category</option>
                                    <option value="Nutrition">Nutrition</option>
                                    <option value="Exercise">Exercise</option>
                                    <option value="Mental Health">Mental Health</option>
                                    <option value="General Health">General Health</option>
                                </select>
                                <div class="invalid-feedback">Please select a category.</div>
                            </div>

                            <div class="mb-3">
                                <label for="Author" class="form-label">
                                    <i class="fas fa-user-edit me-2"></i>Author
                                </label>
                                <input type="text" id="Author" name="Author" class="form-control" required>
                                <div class="invalid-feedback">Please enter an author name.</div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <!-- Title -->
                            <div class="mb-3">
                                <label for="Title" class="form-label">
                                    <i class="fas fa-heading me-2"></i>Title
                                </label>
                                <input type="text" id="Title" name="Title" class="form-control" required>
                                <div class="invalid-feedback">Please enter a title.</div>
                            </div>

                            <!-- Description -->
                            <div class="mb-3">
                                <label for="Description" class="form-label">
                                    <i class="fas fa-align-left me-2"></i>Description
                                </label>
                                <textarea id="Description" name="Description" class="form-control" rows="5" required></textarea>
                                <div class="invalid-feedback">Please provide a description.</div>
                            </div>

                            <!-- Date Posted -->
                            <div class="mb-3">
                                <label for="DatePosted" class="form-label">
                                    <i class="fas fa-calendar-alt me-2"></i>Date Posted
                                </label>
                                <input type="date" id="DatePosted" name="DatePosted" class="form-control" required>
                                <div class="invalid-feedback">Please select a date.</div>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 col-md-6 mx-auto mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save me-2"></i>Add Health Tip
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Success Popup -->
    <div id="successPopup" style="display:none;">Health Tip Added Successfully!</div>

    <!-- Error Popup -->
    <div id="errorPopup" style="display:none;">Error Adding Health Tip!</div>
</section>
<script src="@Url.Content("~/js/addhealthtip.js")"></script>
