@{
    ViewData["Title"] = "Dashboard";
}

@Html.Partial("~/Areas/AdminPanel/Views/Shared/_admin_header.cshtml")

<section class="animated-section">
    <div class="container">
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-hospital-alt fa-4x mb-3" style="color: var(--health-blue);"></i>
                        <h1 class="display-4 fw-bold">Welcome to MedPharm Admin Panel</h1>
                        <p class="lead text-muted">Manage your healthcare services from a single dashboard</p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <!-- Quick Stats -->
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-user-md fa-3x mb-3" style="color: var(--health-purple);"></i>
                        <h3 class="card-title">Doctors</h3>
                        <a href="@Url.Action("Doctor", "Home")" class="btn btn-outline-primary mt-3">
                            <i class="fas fa-chevron-right me-1"></i> Manage
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-user-injured fa-3x mb-3" style="color: var(--health-blue);"></i>
                        <h3 class="card-title">Patients</h3>
                        <a href="@Url.Action("Patient", "Home")" class="btn btn-outline-primary mt-3">
                            <i class="fas fa-chevron-right me-1"></i> Manage
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-stethoscope fa-3x mb-3" style="color: var(--health-teal);"></i>
                        <h3 class="card-title">Services</h3>
                        <a href="@Url.Action("Services", "Home")" class="btn btn-outline-primary mt-3">
                            <i class="fas fa-chevron-right me-1"></i> Manage
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-heartbeat fa-3x mb-3" style="color: var(--health-pink);"></i>
                        <h3 class="card-title">Health Tips</h3>
                        <a href="@Url.Action("HealthTip", "Home")" class="btn btn-outline-primary mt-3">
                            <i class="fas fa-chevron-right me-1"></i> Manage
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row mt-4">
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-calendar-check me-2"></i> Recent Appointments
                        </h5>
                        <a href="@Url.Action("FrontDesk", "Home")" class="btn btn-sm btn-outline-primary">View All</a>
                    </div>
                    <div class="card-body">
                        <p class="text-center text-muted py-5">
                            <i class="fas fa-calendar-alt fa-3x mb-3"></i><br>
                            Access the Front Desk to manage appointments
                        </p>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-newspaper me-2"></i> Latest Updates
                        </h5>
                        <a href="@Url.Action("MedicalUpdates", "Home")" class="btn btn-sm btn-outline-primary">View All</a>
                    </div>
                    <div class="card-body">
                        <p class="text-center text-muted py-5">
                            <i class="fas fa-newspaper fa-3x mb-3"></i><br>
                            Access Medical Updates to manage the latest news
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@Html.Partial("~/Areas/AdminPanel/Views/Shared/_admin_footer.cshtml")
