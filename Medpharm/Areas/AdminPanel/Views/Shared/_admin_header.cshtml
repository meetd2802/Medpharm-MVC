<!doctype html>
<html lang="en">
<head>
    <title>@ViewData["Title"] - MedPharm Admin</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    
    <!-- Font Awesome 6 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <!-- Google Fonts - Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/Admin.css" asp-append-version="true" />

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>


<!-- Logo header -->
<div class="logo-header">
    <div class="container text-center">
        <img src="~/Images/logo.png" alt="MedPharm Logo" class="img-fluid">
    </div>
</div>

<!-- Navigation -->
<header>
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
            <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <ul class="navbar-nav">
                    @if (Context.Session.GetString("AdminId") != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="javascript:void(0);" onclick="logoutAdmin()">
                                <i class="fas fa-sign-out-alt me-1"></i> Logout
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("AdminLogin", "Home")">
                                <i class="fas fa-sign-in-alt me-1"></i> Login
                            </a>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Profile", "Home")">
                            <i class="fa-solid fa-circle-user"></i> Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")" id="adminPageLink">
                            <i class="fa-solid fa-house me-1"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Admin", "Home")" id="adminPageLink">
                            <i class="fas fa-user-shield me-1"></i> Admins
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("FrontDesk", "Home")">
                            <i class="fas fa-calendar-check me-1"></i> Front-Desk
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Patient", "Home")">
                            <i class="fas fa-user-injured me-1"></i> Patients
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Doctor", "Home")">
                            <i class="fas fa-user-md me-1"></i> Doctors
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("MedicalUpdates", "Home")">
                            <i class="fas fa-newspaper me-1"></i> Updates
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Users", "Home")">
                            <i class="fas fa-users me-1"></i> Users
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Services", "Home")">
                            <i class="fas fa-stethoscope me-1"></i> Services
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("HealthTip", "Home")">
                            <i class="fas fa-heartbeat me-1"></i> Health Tips
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Waitlist", "Home")">
                            <i class="fas fa-hourglass-half me-1"></i> Wait List
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ContactUs", "Home")">
                            <i class="fas fa-envelope me-1"></i> Contact Us
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Payments", "Home", new { area = "AdminPanel" })">
                            <i class="fas fa-money-bill-wave"></i> Payments
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>


<script>
    function logoutAdmin() {
        fetch("/AdminPanel/Home/Logout", {
            method: "POST",
            credentials: "include"
        })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    sessionStorage.clear(); // ✅ Clear frontend session
                    window.location.href = "/AdminPanel/Home/AdminLogin"; // ✅ Redirect to login page
                } else {
                    alert("Logout failed! Please try again.");
                }
            })
            .catch(error => console.error("Logout error:", error));
    }
</script>

<script src="@Url.Content("~/js/appointment.js")"></script>