@{
    ViewData["Title"] = "Login";
}

@Html.Partial("login_header")

<div class="custom-container d-flex justify-content-center align-items-center min-vh-100">
    <div class="custom-card rounded">
        <div class="custom-bg p-5">
            <div class="text-center mb-4">
                <h3 class="custom-title">Welcome Back!</h3>
                <p class="text-muted">Please login to your account</p>
            </div>

            <form method="post" id="loginForm">
                <div class="form-group mb-4">
                    <label for="name" class="form-label fw-bold">Username</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="fas fa-user"></i></span>
                        <input type="text" id="name" name="username" class="form-control custom-input" required>
                    </div>
                </div>

                <div class="form-group mb-4">
                    <label for="password" class="form-label fw-bold">Password</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="fas fa-lock"></i></span>
                        <input type="password" id="password" name="password" class="form-control custom-input" required>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="rememberMe">
                        <label class="form-check-label" for="rememberMe">Remember me</label>
                    </div>
                    <a href="@Url.Action("Changepassword","Home")" id="forgotPasswordLink" class="custom-link">Forgot Password?</a>
                </div>

                <button type="submit" class="btn custom-btn btn-block w-100 py-3 mb-4">
                    <i class="fas fa-sign-in-alt me-2"></i>LOGIN
                </button>
            </form>

            <hr class="custom-divider">

            <h5 class="text-center mt-3 custom-text">
                New User? <a href="@Url.Action("Register","Home")" class="custom-link">Register Here</a>
            </h5>
        </div>
    </div>
</div>

@Html.Partial("User_footer")

<style>
    /* Custom Login Page Styling */
    .custom-container {
        background: linear-gradient(120deg, #f6f9fc 0%, #eef2f7 100%);
        min-height: 100vh;
        padding: 2rem 0;
    }

    .custom-card {
        width: 450px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border: none;
        transition: transform 0.3s ease;
        background: white;
        margin-top: 2rem;
    }

    .custom-card:hover {
        transform: translateY(-2px);
    }

    .custom-bg {
        background-color: white;
    }

    .custom-btn {
        background: linear-gradient(45deg, #2193b0, #6dd5ed);
        border: none;
        font-weight: bold;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        color: white;
    }

    .custom-btn:hover {
        background: linear-gradient(45deg, #6dd5ed, #2193b0);
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        color: white;
    }

    .custom-divider {
        border-top: 1px solid rgba(0, 0, 0, 0.1);
        margin: 1.5rem 0;
    }

    .custom-title {
        font-family: 'Times New Roman';
        font-weight: bold;
        color: #2c3e50;
        font-size: 2rem;
    }

    .custom-input {
        border-radius: 8px;
        border: 1px solid #dee2e6;
        padding: 12px;
        transition: all 0.3s ease;
        background: white;
    }

    .custom-input:focus {
        border-color: #2193b0;
        box-shadow: 0 0 0 0.2rem rgba(33, 147, 176, 0.25);
    }

    .custom-link {
        color: #2193b0;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .custom-link:hover {
        color: #6dd5ed;
        text-decoration: none;
    }

    .custom-text {
        font-family: 'Times New Roman';
        color: #6c757d;
    }

    .input-group-text {
        border: 1px solid #dee2e6;
        background-color: #f8f9fa;
        color: #2193b0;
    }

    .form-check-input:checked {
        background-color: #2193b0;
        border-color: #2193b0;
    }
</style>
